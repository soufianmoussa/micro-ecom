
/* --- Footer --- */
.footer {
  background: var(--primary-color);
  color: white;
  padding: 4rem 0 0;
  margin-top: auto;
}

.footer-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 3rem;
  padding-bottom: 3rem;
  border-bottom: 1px solid rgba(255,255,255,0.1);
}

.footer-brand h3 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  color: white;
}

.footer-brand p {
  color: var(--text-light);
}

.footer-links {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.footer-links h4, .footer-contact h4 {
  font-size: 1.1rem;
  margin-bottom: 1rem;
  color: white;
}

.footer-links a {
  color: var(--text-light);
  text-decoration: none;
  transition: color 0.2s;
}

.footer-links a:hover {
  color: var(--accent-color);
}

.footer-contact p {
  color: var(--text-light);
  margin-bottom: 0.5rem;
}

.footer-bottom {
  text-align: center;
  padding: 2rem;
  background: rgba(0,0,0,0.2);
  color: var(--text-light);
  font-size: 0.9rem;
}
